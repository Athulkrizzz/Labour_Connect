<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile Details & Update</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body class="bg-light">
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg bg-dark navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#"><%= u1.username %> Profile</a>
        </div>
    </nav>

    <!-- Profile Section -->
    <section class="container my-5">
        <div class="card p-4 shadow-sm">
            <div class="row align-items-center">
                <!-- <div class="col-md-4 text-center">
                    <img src="https://files.oaiusercontent.com/file-Wq75GbVbNvk8RVaEL9VX7t?se=2025-03-02T17%3A47%3A26Z&sp=r&sv=2024-08-04&sr=b&rscc=max-age%3D604800%2C%20immutable%2C%20private&rscd=attachment%3B%20filename%3D5434e490-c3d8-4f75-9250-f7989f7a6741.webp&sig=WsiA2ifMWWiqiWZx4Okto4mVmSjARQwE0aiNCJ1/WVE%3D" class="rounded-circle img-fluid" alt="Profile Picture">
                </div> -->
                <div class="col-md-8">
                    <h2 class="text-dark"><%= u1.fullname %></h2>
                    <h4 class="text-muted"><%= u1.role %></h4>
                    <h6 class="text-muted"><%= u1.email %></h6>
                    <p><strong>Location:</strong> <%= u1.location %></p>
                    <p><strong>Skills:</strong> <%= u1.skills ? u1.skills.join(', ') : 'N/A' %></p>
                    <p><strong>Description:</strong> <%= u1.description %></p>
                    <div>
                        <strong>Rating:</strong>
                        <span class="text-warning"><i class="fas fa-star"></i></span>
                        <span class="text-warning"><i class="fas fa-star"></i></span>
                        <span class="text-warning"><i class="fas fa-star"></i></span>
                        <span class="text-warning"><i class="fas fa-star"></i></span>
                        <span class="text-muted"><i class="fas fa-star"></i></span>
                    </div>
                </div>
            </div>
        </div>
        
    </section>



    <section class="container my-10">
        <div class="col-md-8 mb-3 offset-3">
            <% for(let job of jobs) { %>
                <div class="col-md-6 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Needed: <%= job.title %></h5>
                            <p class="card-text">Location: <%= job.location %> | Pay: â‚¹<%= job.salary %> /day</p>
                            <p class="card-text text-muted"><%= job.description %></p>
                            <!-- Delete Button -->
                            <form action="/jobs/<%= job._id %>?_method=DELETE" method="POST" onsubmit="return confirm('Are you sure you want to delete this job?');">
                                <button type="submit" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i> Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    </section>
    

    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

