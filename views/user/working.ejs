<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Application Details</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script>
        function confirmPayment() {
            let confirmAction = confirm("Do you want to proceed with the payment?");
            if (confirmAction) {
                alert("Payment Successful!");
                // Redirect to payment page or backend API call
                window.location.href = "/payment";  
            } else {
                alert("Payment Cancelled");
            }
        }
    </script>
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center mb-4">Application Details</h2>
        
        <div class="text-center mb-4">
            <h3><%= job.title %></h3>
            <p><%= job.description %></p>
            <p>Posted By: <%= job.postedBy %></p>
        </div>

        <% if (!applications || applications.length === 0) { %>
            <p class="text-danger text-center">No accepted applications found.</p>
        <% } else { %>
            <table class="table table-bordered table-striped">
                <tbody>
                    <% applications.filter(app => app.status === 'accepted' || app.status === 'finished').forEach(application => { %>
                        <tr>
                            <th>Full Name</th>
                            <td><%= application.fullname %></td>
                        </tr>
                        <tr>
                            <th>Username</th>
                            <td><%= application.username %></td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td><%= application.email %></td>
                        </tr>
                        <tr>
                            <th>Location</th>
                            <td><%= application.location %></td>
                        </tr>
                        <tr>
                            <th>Date</th>
                            <td><%= job.date %></td>
                        </tr>
                        <tr>
                            <th>Experience</th>
                            <td><%= application.experience %> years</td>
                        </tr>
                        <tr>
                            <th>Availability</th>
                            <td><%= application.availability %></td>
                        </tr>
                        <tr>
                            <th>Expected Salary</th>
                            <td>$<%= application.salary %></td>
                        </tr>
                        <tr>
                            <th>Languages</th>
                            <td><%= application.languages ? application.languages.join(', ') : 'N/A' %></td>
                        </tr>
                        <tr>
                            <th>Applied At</th>
                            <td><%= new Date(application.appliedAt).toLocaleString() %></td>
                        </tr>
                        <tr>
                            <th>Status</th>
                            <td>
                                <span class="badge bg-<%= application.status === 'accepted' ? 'success' : application.status === 'rejected' ? 'danger' : application.status === 'finished' ? 'primary' : 'warning' %>">
                                    <%= application.status %>
                                </span>
                            </td>
                        </tr>
                        <% if (application.status === 'finished') { %>
                        <tr>
                            <td colspan="2" class="text-center">
                                <button class="btn btn-primary" onclick="confirmPayment()">Pay Now</button>
                            </td>
                        </tr>
                        <% } %>
                    <% }); %>
                </tbody>
            </table>
        <% } %>
    </div>
</body>
</html>
