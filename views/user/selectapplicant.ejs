<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= u1.fullname %> Profile</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body class="bg-light">
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg bg-dark navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#"><%= u1.username %> Profile</a>
        </div>
    </nav>

    <!-- Profile & Jobs Section in a Single Row -->
    <div class="container my-5">
        <div class="row d-flex align-items-start">
            <!-- Profile Card -->
            <div class="col-md-6">
                <div class="card p-4 shadow-sm">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <h2 class="text-dark"><%= u1.fullname %></h2>
                            <h6 class="text-muted"><%= u1.email %></h6>
                            <p><strong>State:</strong> <%= u1.location %></p>
                            <p><strong>Description:</strong> <%= u1.description %></p>
                            
                            <!-- Rating Section -->
                            <div>
                                <strong>Rating:</strong>
                                <% for (let i = 0; i < 5; i++) { %>
                                    <% if (i < u1.rating) { %>
                                        <span class="text-warning"><i class="fas fa-star"></i></span>
                                    <% } else { %>
                                        <span class="text-muted"><i class="fas fa-star"></i></span>
                                    <% } %>
                                <% } %>
                            </div>

                            <!-- See Reviews Button -->
                            <button class="btn btn-info mt-3" data-bs-toggle="modal" data-bs-target="#reviewsModal">
                                See Reviews
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Applicant Details -->
            <div class="col-md-6">
                <div class="card p-4 shadow-sm">
                    <h2 class="text-dark"><%= applicant.fullname %></h2>
                    <h4 class="text-muted"><%= applicant.role %></h4>
                    <h6 class="text-muted"><%= u1.email %></h6>
                    <p><strong>Username:</strong> <%= applicant.username %></p>
                    <p><strong>Job:</strong> <%= applicant.job ? applicant.job : 'N/A' %></p>
                    <p><strong>Location:</strong> <%= applicant.location ? applicant.location : 'N/A' %></p>
                    <p><strong>Skills:</strong> <%= applicant.skills && applicant.skills.length ? applicant.skills.join(', ') : 'N/A' %></p>
                    <p><strong>Availability:</strong> <%= applicant.availability ? applicant.availability : 'N/A' %></p>
                    <p><strong>Description:</strong> <%= applicant.description ? applicant.description : 'N/A' %></p>

                    <!-- Action Buttons -->
                    <div class="d-flex gap-2">
                        
                       <!-- Inside Applicant Details Card -->
<!-- Action Buttons -->
<div class="d-flex gap-2">
    <!-- Accept Form -->
    <form action="/login/<%=u2._id %>/application/<%= applicant._id %>?_method=PUT" method="POST">
        <input type="hidden" name="status" value="accepted">
        <button type="submit" class="btn btn-primary">Accept</button>
    </form>

    <button class="btn btn-success">Message</button>

    <!-- Reject Form -->
    <form action="/login/<%=u2._id %>/application/<%= applicant._id %>?_method=PUT" method="POST">
        <input type="hidden" name="status" value="rejected">
        <button type="submit" class="btn btn-danger">Reject</button>
    </form>
</div>




                    </div>
                </div>
            </div>
        </div
    
    
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    </body>
    </html>